<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">

    <!-- Ảnh sản phẩm: TO HƠN NỮA -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgThumb"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Medium"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nhóm tên + giá: GIỮ NGUYÊN KÍCH THƯỚC CHỮ (20sp / 24sp) -->
    <LinearLayout
        android:id="@+id/infoGroup"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgThumb"
        app:layout_constraintTop_toTopOf="@id/imgThumb"
        app:layout_constraintBottom_toBottomOf="@id/imgThumb"
        app:layout_constraintEnd_toStartOf="@id/qtyGroup">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/product_price" />
    </LinearLayout>

    <!-- Cụm số lượng: RẤT NHỎ & SÁT NHAU, nền xám nhạt -->
    <LinearLayout
        android:id="@+id/qtyGroup"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_qty_chip"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="@id/imgThumb"
        app:layout_constraintBottom_toBottomOf="@id/imgThumb"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút - : NHỎ NHIỀU -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="-"
            android:textSize="12sp" />

        <!-- Số lượng: rất gọn, sát hai nút -->
        <TextView
            android:id="@+id/tvQty"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <!-- Nút + : NHỎ NHIỀU -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="+"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
