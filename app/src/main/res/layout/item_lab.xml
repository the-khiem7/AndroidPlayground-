<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    app:cardBackgroundColor="@color/pg_surface"
    app:cardElevation="0dp"
    app:strokeColor="@color/pg_outline"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:padding="20dp">

        <View
            android:id="@+id/stripAccent"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/lab_accent_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLabBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:background="@drawable/bg_badge"
            android:backgroundTint="@color/lab_accent_1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="LAB 01"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/stripAccent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLabTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="48dp"
            android:text="Lab title"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvLabBadge"
            app:layout_constraintTop_toBottomOf="@id/tvLabBadge" />

        <TextView
            android:id="@+id/tvLabDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="48dp"
            android:text="Description"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/pg_text_muted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvLabBadge"
            app:layout_constraintTop_toBottomOf="@id/tvLabTitle" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_top_right"
            android:tint="@color/pg_text_muted"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
